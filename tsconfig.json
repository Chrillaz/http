{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": false,
		"declarationDir": "lib",
		"lib": ["es2015", "dom"],
		"module": "commonjs",
		"outDir": "lib",
		"pretty": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
	},
	"exclude": [
        "src/types.ts",
        "node_modules", 
        "lib", 
        "**/*.test.*"
    ]
}
